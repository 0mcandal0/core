  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha: current file",
      "program": "${workspaceFolder}/node_modules/.bin/mocha",
      "args": [
        "-r",
        "ts-node/register",
        "-b",
        "-t",
        "0",
        "-r",
        "tsconfig-paths/register",
        "-r",
        "jsdom-global/register",
        "-r",
        "mock-local-storage",
        "'${file}'"
      ],
      "console": "integratedTerminal"
    },

    {
      "type": "node",
      "args": [
          "DEBUG=*",

      ],
      // "console": "integratedTerminal",
      "request": "launch",
      "name": "RESURSION",
      "runtimeVersion": "20",
      "skipFiles": [
          "<node_internals>/**"
      ],
      "program": "${workspaceFolder}\\recursion.js"
  },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-r",
        "ts-node/register",
          // "-b",
          // "-t",
          // "0",
          "-r",
          "tsconfig-paths/register",
          "-r",
          "jsdom-global/register",
          // "-r",
          // "mock-local-storage",
          "${workspaceFolder}/lib/**/__tests__/process.test.js",
          "-t",
          "3000000"

      ],
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },


    // {
    //   "type": "node",
    //   "request": "launch",
    //   "name": "Mocha Tests",
    //   "runtimeExecutable": "npx",
    //   "runtimeArgs": [
    //     "mocha",
